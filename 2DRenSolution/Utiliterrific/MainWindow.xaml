<Window x:Class="Utiliterrific.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="900" Width="1600">
    <Grid Name="baseGrid">

        <Button Content="Load File" HorizontalAlignment="Left" Margin="1423,10,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="401" Margin="10,10,0,0" VerticalAlignment="Top" Width="1408">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <Canvas>
                    <Image Name="displayedImage" HorizontalAlignment="Left" Height="389" VerticalAlignment="Top" Width="1396" ClipToBounds="True" MouseWheel="displayedImage_MouseWheel" RenderTransformOrigin="0.5,0.5" MouseDown="displayedImage_MouseDown" MouseUp="displayedImage_MouseUp" MouseMove="displayedImage_MouseMove"></Image>
                    <Rectangle Name="selectionBox" StrokeThickness="2" Stroke="Red"></Rectangle>
                </Canvas>
            </ScrollViewer>
        </Border>
        <Button Content="Add Sprite" HorizontalAlignment="Left" Margin="1423,43,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
    </Grid>
</Window>
